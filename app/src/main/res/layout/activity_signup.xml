<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_signup"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30.5dp"
            android:layout_marginEnd="30.5dp"
            android:textColorHint="#333333"
            app:hintTextAppearance="@style/MyHintStyle2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tayannemartin"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textColor="#333333" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30.5dp"
            android:layout_marginEnd="30.5dp"
            android:textColorHint="#333333"
            app:hintTextAppearance="@style/MyHintStyle2">

            <EditText
                android:layout_width="match_parent"
                android:textColor="#333333"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30.5dp"
            android:layout_marginEnd="30.5dp"
            android:textColorHint="#333333"
            app:hintTextAppearance="@style/MyHintStyle2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30.5dp"
            android:textColorHint="#333333"
            android:layout_marginEnd="30.5dp"
            app:hintTextAppearance="@style/MyHintStyle2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zip Code"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30.5dp"
            android:layout_marginEnd="30.5dp"
            android:textColorHint="#333333"
            app:hintTextAppearance="@style/MyHintStyle2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept Terms of Use"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:textColor="#333333"/>

        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="By creating your accont you confirm that Youâ€™ve read and accept the Terms Of Use."
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner2"
            android:fontFamily="sans-serif"
            android:paddingTop="13dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:text="Do you have an account? Login"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>